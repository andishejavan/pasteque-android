  <style name="action_bar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
    <item name="displayOptions">useLogo|showHome</item>
  </style>

  <style name="POSTechTheme" parent="@style/Theme.AppCompat.Light">
    <item name="android:textSize">16dip</item>
    <item name="android:textColor">@color/text</item>
    <item name="android:windowBackground">@android:color/white</item>
    <item name="actionBarStyle">@style/action_bar</item>
  </style>

  <style name="list">
    <item name="android:background">@color/contentBackground</item>
    <item name="android:cacheColorHint">@color/contentBackground</item>
  </style>

  <style name="ticketLineList">
    <item name="android:background">@color/ticketBackground</item>
    <item name="android:cacheColorHint">@color/ticketBackground</item>
  </style>

  <style name="button">
    <item name="android:background">@drawable/btn_base</item>
    <item name="android:padding">@dimen/contentMargin</item>
    <item name="android:textColor">@color/btnUsrStartText</item>
  </style>

  <style name="buttonImportant">
    <item name="android:background">@drawable/btn_important</item>
    <item name="android:padding">@dimen/contentMargin</item>
    <item name="android:textColor">@color/btnUsrStartText</item>
  </style>

  <style name="buttonInput">
    <item name="android:background">@drawable/btn_input</item>
    <item name="android:padding">@dimen/contentMargin</item>
    <item name="android:textColor">@color/btnUsrStartText</item>
  </style>

  <style name="buttonTicketLineItem">
    <item name="android:background">@drawable/btn_ticket_line_item</item>
    <item name="android:padding">@dimen/contentMargin</item>
    <item name="android:textColor">@color/btnUsrStartText</item>
  </style>

  <style name="numButton">
    <item name="android:background">#ff028854</item>
    <item name="android:textSize">22dip</item>
    <item name="android:textColor">#ffffff</item>
  </style>
  <dimen name="numBtnWidth">@dimen/bigBtnWidth</dimen>
  <dimen name="numBtnHeight">55dip</dimen>

  <style name="iconBtnText">
    <item name="android:layout_alignParentBottom">true</item>
    <item name="android:layout_margin">@dimen/contentMargin</item>
    <item name="android:background">@color/textBtnBackground</item>
  </style>
</resources>
