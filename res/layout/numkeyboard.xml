<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout>
  <TableRow
      android:layout_marginBottom="@dimen/btnSpacing">
    <Button android:id="@+id/key7"
        android:layout_width="@dimen/numBtnWidth"
        android:layout_height="@dimen/numBtnHeight"
        android:layout_marginRight="@dimen/btnSpacing"
        style="@style/numButton"
        android:text="7" />
    <Button android:id="@+id/key8"
        android:layout_width="@dimen/numBtnWidth"
        android:layout_height="@dimen/numBtnHeight"
        android:layout_marginRight="@dimen/btnSpacing"
        style="@style/numButton"
        android:text="8" />
    <Button android:id="@+id/key9"
        android:layout_width="@dimen/numBtnWidth"
        android:layout_height="@dimen/numBtnHeight"
        style="@style/numButton"
        android:text="9" />
  </TableRow>
  <TableRow
      android:layout_marginBottom="@dimen/btnSpacing">
    <Button android:id="@+id/key4"
        android:layout_width="@dimen/numBtnWidth"
        android:layout_height="@dimen/numBtnHeight"
        android:layout_marginRight="@dimen/btnSpacing"
        style="@style/numButton"
        android:text="4" />
    <Button android:id="@+id/key5"
        android:layout_width="@dimen/numBtnWidth"
        android:layout_height="@dimen/numBtnHeight"
        android:layout_marginRight="@dimen/btnSpacing"
        style="@style/numButton"
        android:text="5" />
    <Button android:id="@+id/key6"
        android:layout_width="@dimen/numBtnWidth"
        android:layout_height="@dimen/numBtnHeight"
        style="@style/numButton"
        android:text="6" />
  </TableRow>
  <TableRow
      android:layout_marginBottom="@dimen/btnSpacing">
    <Button android:id="@+id/key1"
        android:layout_width="@dimen/numBtnWidth"
        android:layout_height="@dimen/numBtnHeight"
        android:layout_marginRight="@dimen/btnSpacing"
        style="@style/numButton"
        android:text="1" />
    <Button android:id="@+id/key2"
        android:layout_width="@dimen/numBtnWidth"
        android:layout_height="@dimen/numBtnHeight"
        android:layout_marginRight="@dimen/btnSpacing"
        style="@style/numButton"
        android:text="2" />
    <Button android:id="@+id/key3"
        android:layout_width="@dimen/numBtnWidth"
        android:layout_height="@dimen/numBtnHeight"
        style="@style/numButton"
        android:text="3" />
  </TableRow>
  <TableRow
      android:layout_marginBottom="@dimen/btnSpacing">
    <Button android:id="@+id/key0"
        android:layout_width="@dimen/numBtnWidth"
        android:layout_height="@dimen/numBtnHeight"
        android:layout_marginRight="@dimen/btnSpacing"
        style="@style/numButton"
        android:text="0" />
    <Button android:id="@+id/keydot"
        android:layout_width="@dimen/numBtnWidth"
        android:layout_height="@dimen/numBtnHeight"
        android:layout_marginRight="@dimen/btnSpacing"
        style="@style/numButton"
        android:text="." />
    <Button
        android:layout_width="@dimen/numBtnWidth"
        android:layout_height="@dimen/numBtnHeight"
        android:onClick="clear"
        style="@style/numButton"
        android:text="00" />
  </TableRow>
    </TableLayout>
    <TableLayout>
  <TableRow>
    <Button
        android:layout_width="@dimen/numBtnWidth"
        android:layout_height="@dimen/numBtnHeight"
        android:layout_marginRight="@dimen/btnSpacing"
        android:onClick="correct"
        style="@style/numButton"
        android:text="X"
        android:background="#484848" />
    <Button android:id="@+id/keyenter"
        android:layout_width="252.8dp"
        android:layout_height="@dimen/numBtnHeight"
        android:layout_marginRight="@dimen/btnSpacing"
        style="@style/numButton"
        android:text="ENCAISSER"
        android:background="#ff8800" />
  </TableRow>
    </TableLayout>
</merge>