<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="@color/bleu">

  <!-- Hidden data for compatibility -->
  <TextView
      android:id="@+id/ticket_articles"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:textSize="@dimen/ticket_subtitle"
      android:visibility="gone"/>
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/title_topmargin"
      android:background="@color/subtitleTicketBackground"
      android:visibility="gone">
    <ImageButton
        android:id="@+id/scan_customer"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginLeft="@dimen/halfBtnSpacing"
        android:layout_marginRight="@dimen/halfBtnSpacing"
        android:src="@drawable/barcode"
        android:onClick="scanBarcode"
        style="@style/button" />
    <ImageButton
        android:id="@+id/change_area"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginLeft="@dimen/halfBtnSpacing"
        android:layout_marginRight="@dimen/halfBtnSpacing"
        android:src="@drawable/tariff_area"
        android:onClick="changeArea"
        style="@style/button" />
  </LinearLayout>
  <!-- Left part: products -->
  <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="vertical"
      android:layout_marginTop="15dp"
      android:layout_weight="1"
      android:background="@color/titleTicketcolor"
          >

        <Gallery android:id="@+id/categoriesGrid"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:spacing="@dimen/btnSpacing"
                 android:unselectedAlpha="0.8"
                 android:padding="@dimen/title_margin"
                 android:background="@color/titleTicketcolor"
                 android:layout_marginBottom="3dp"
                />

    <GridView android:id="@+id/productsGrid"
               android:padding="20dp"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:layout_weight="1"
              android:layout_gravity="center_horizontal"
              android:numColumns="4"
              android:columnWidth="@dimen/bigBtnWidth"
              android:stretchMode="spacingWidthUniform"
              android:gravity="center"
              android:horizontalSpacing="@dimen/btnSpacing"
              android:verticalSpacing="@dimen/btnSpacing"
               android:background="@color/titleTicketcolor"
        />
      <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/worldline_small"
              android:gravity="left|bottom"
              />

  </LinearLayout>

  <!-- Right part: ticket -->
  <LinearLayout
      android:id="@id/content"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="2"
      android:orientation="vertical"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="15dp"
      android:background="@color/titleTicketcolor">
    <!-- Top bar: ticket and new/delete buttons -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
      <TextView
          android:id="@+id/ticket_label"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_margin="@dimen/contentMargin"
          android:layout_gravity="center_vertical"
          android:textSize="@dimen/ticket_title"
          android:clickable="true"
          android:onClick="switchTicketBtn"
        android:background="@drawable/ticket_dropdown" />
      <View
          android:layout_height="fill_parent"
          android:layout_width="1px"
          android:layout_marginTop="@dimen/contentMargin"
          android:layout_marginBottom="@dimen/contentMargin"
          android:background="#bababa" />
      <ImageButton
          android:id="@+id/ticket_delete"
          android:layout_width="@dimen/smallBtnWidth"
          android:layout_height="@dimen/smallBtnHeight"
          android:layout_marginBottom="@dimen/contentMargin"
          android:layout_marginLeft="@dimen/halfBtnSpacing"
          android:layout_marginRight="@dimen/halfBtnSpacing"
          android:layout_marginTop="@dimen/contentMargin"
          android:layout_gravity="center_vertical"
          android:src="@drawable/delete"
          style="@style/buttonTicketLineItem"
          android:onClick="deleteTicket" />
      <View
          android:layout_height="fill_parent"
          android:layout_width="1px"
          android:layout_marginTop="@dimen/contentMargin"
          android:layout_marginBottom="@dimen/contentMargin"
          android:background="#bababa" />
      <ImageButton
          android:id="@+id/ticket_new"
          android:layout_width="@dimen/smallBtnWidth"
          android:layout_height="@dimen/smallBtnHeight"
          android:layout_marginBottom="@dimen/contentMargin"
          android:layout_marginLeft="@dimen/halfBtnSpacing"
          android:layout_marginRight="@dimen/halfBtnSpacing"
          android:layout_marginTop="@dimen/contentMargin"
          android:layout_gravity="center_vertical"
          android:src="@drawable/btn_new_ticket"
          style="@style/buttonTicketLineItem"
          android:onClick="newTicket" />
    </LinearLayout>
      <LinearLayout
          android:id="@id/content"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="2"
          android:orientation="vertical"
          android:layout_marginBottom="-15dp"
          >
    <TextView
        android:id="@+id/ticket_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/ticket_subtitle"
        android:textColor="@color/bleu"/>
    <TextView
        android:id="@+id/ticket_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/title_topmargin"
        android:textSize="@dimen/ticket_subtitle" />
    <!-- Ticket content -->
    <ListView
        android:id="@+id/ticket_content"
        android:cacheColorHint="#eeeeee"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"/>
  </LinearLayout>
    <!-- Bottom bar: total and pay -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btnHeight"
        android:background="#cccccc"
        android:gravity="center"
        android:orientation="horizontal">
<!--      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/contentMargin"
          android:src="@drawable/cart_back_disabled" />-->
      <TextView android:id="@+id/ticket_total"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/contentMargin"
                android:gravity="right|center_vertical"
                android:textColor="@color/bleu"
                android:textStyle="bold"
                android:textSize="@dimen/ticket_subtitle" />
      <ImageButton
          android:id="@+id/pay"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/contentMargin"
          android:layout_marginRight="@dimen/contentMargin"
          android:background="@color/bleu"
          android:onClick="payTicket"
          android:padding="10dp"
          android:src="@drawable/cart_pay" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>
